{
  "name": "Corporate Action Lookup Engine",
  "version": "1.0.0",
  "description": "Design tokens inspired by Maybank2u.com.sg aesthetic",
  "designSystem": {
    "colors": {
      "primary": {
        "base": "#0F172A",
        "dark": "#020617",
        "light": "#1E293B",
        "lighter": "#334155",
        "rgb": "rgb(15, 23, 42)"
      },
      "accent": {
        "primary": "#2563EB",
        "hover": "#1D4ED8",
        "active": "#1E40AF",
        "light": "#DBEAFE",
        "lighter": "#EFF6FF"
      },
      "semantic": {
        "success": "#059669",
        "successLight": "#F0FDF4",
        "successBorder": "#C1E7D5",
        "warning": "#F59E0B",
        "warningLight": "#FFFBEB",
        "warningBorder": "#FCD34D",
        "error": "#DC2626",
        "errorLight": "#FEE2E2",
        "errorBorder": "#FECACA",
        "info": "#3B82F6",
        "infoLight": "#EFF6FF",
        "infoBorder": "#BFDBFE"
      },
      "neutral": {
        "50": "#F8FAFC",
        "100": "#F1F5F9",
        "200": "#E2E8F0",
        "300": "#CBD5E1",
        "400": "#94A3B8",
        "500": "#64748B",
        "600": "#475569",
        "700": "#334155",
        "800": "#1E293B",
        "900": "#0F172A",
        "950": "#020617"
      }
    },
    "typography": {
      "fontFamily": {
        "primary": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "mono": "'Menlo', 'Monaco', 'Courier New', monospace"
      },
      "fontSize": {
        "displayXL": { "size": "48px", "lineHeight": "1.1", "weight": 600 },
        "displayLg": { "size": "40px", "lineHeight": "1.1", "weight": 600 },
        "displayMd": { "size": "32px", "lineHeight": "1.2", "weight": 600 },
        "displaySm": { "size": "28px", "lineHeight": "1.2", "weight": 600 },
        "h1": { "size": "24px", "lineHeight": "1.3", "weight": 600 },
        "h2": { "size": "20px", "lineHeight": "1.4", "weight": 600 },
        "h3": { "size": "18px", "lineHeight": "1.4", "weight": 600 },
        "h4": { "size": "16px", "lineHeight": "1.5", "weight": 600 },
        "bodyLarge": { "size": "16px", "lineHeight": "1.5", "weight": 400 },
        "body": { "size": "14px", "lineHeight": "1.5", "weight": 400 },
        "bodySmall": { "size": "13px", "lineHeight": "1.6", "weight": 400 },
        "caption": { "size": "12px", "lineHeight": "1.6", "weight": 400 },
        "label": { "size": "11px", "lineHeight": "1.6", "weight": 500 }
      },
      "fontWeight": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700,
        "extrabold": 800
      }
    },
    "spacing": {
      "unit": "4px",
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "base": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px"
    },
    "borderRadius": {
      "none": "0px",
      "sm": "2px",
      "base": "6px",
      "md": "8px",
      "lg": "12px",
      "full": "9999px"
    },
    "shadows": {
      "elevation1": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
      "elevation2": "0 4px 6px 0 rgba(0, 0, 0, 0.1), 0 2px 4px 0 rgba(0, 0, 0, 0.06)",
      "elevation3": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px 0 rgba(0, 0, 0, 0.05)",
      "elevation4": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px 0 rgba(0, 0, 0, 0.04)",
      "focus": "0 0 0 2px rgba(37, 99, 235, 0.1), 0 0 0 4px rgba(37, 99, 235, 0.5)"
    },
    "transitions": {
      "fast": "150ms ease-in-out",
      "base": "200ms ease-in-out",
      "slow": "300ms ease-in-out"
    }
  },
  "components": {
    "button": {
      "primary": {
        "padding": "10px 16px",
        "fontSize": "14px",
        "fontWeight": 600,
        "borderRadius": "6px",
        "minWidth": "120px",
        "height": "40px",
        "background": "#2563EB",
        "color": "white",
        "hover": { "background": "#1D4ED8" },
        "active": { "background": "#1E40AF" },
        "disabled": { "background": "#E2E8F0", "color": "#94A3B8" }
      },
      "secondary": {
        "padding": "10px 16px",
        "fontSize": "14px",
        "fontWeight": 600,
        "borderRadius": "6px",
        "minWidth": "120px",
        "height": "40px",
        "background": "#F1F5F9",
        "color": "#334155",
        "border": "1px solid #E2E8F0",
        "hover": { "background": "#E2E8F0" },
        "active": { "background": "#CBD5E1" }
      },
      "danger": {
        "padding": "10px 16px",
        "fontSize": "14px",
        "fontWeight": 600,
        "borderRadius": "6px",
        "minWidth": "120px",
        "height": "40px",
        "background": "#DC2626",
        "color": "white",
        "hover": { "background": "#991B1B" },
        "active": { "background": "#7F1D1D" }
      }
    },
    "input": {
      "textInput": {
        "height": "40px",
        "padding": "10px 12px",
        "fontSize": "14px",
        "borderRadius": "6px",
        "border": "1px solid #E2E8F0",
        "color": "#0F172A",
        "placeholderColor": "#94A3B8",
        "focus": { "border": "2px solid #2563EB", "padding": "9px 11px" },
        "disabled": { "background": "#F8FAFC", "color": "#94A3B8" }
      },
      "select": {
        "height": "40px",
        "padding": "10px 12px",
        "fontSize": "14px",
        "borderRadius": "6px",
        "border": "1px solid #E2E8F0",
        "iconSize": "16px",
        "iconColor": "#94A3B8"
      }
    },
    "card": {
      "standard": {
        "padding": "24px",
        "borderRadius": "8px",
        "border": "1px solid #E2E8F0",
        "background": "white",
        "boxShadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
        "hover": { "boxShadow": "0 4px 6px 0 rgba(0, 0, 0, 0.1)", "background": "#F8FAFC" }
      },
      "dataCard": {
        "padding": "20px",
        "borderRadius": "8px",
        "heading": { "fontSize": "13px", "fontWeight": 600, "color": "#475569" },
        "value": { "fontSize": "32px", "fontWeight": 700, "color": "#0F172A" },
        "subtext": { "fontSize": "12px", "color": "#64748B" }
      }
    },
    "table": {
      "headerRow": {
        "background": "#F8FAFC",
        "padding": "12px 16px",
        "fontSize": "12px",
        "fontWeight": 600,
        "color": "#334155",
        "borderBottom": "1px solid #E2E8F0"
      },
      "bodyRow": {
        "padding": "12px 16px",
        "fontSize": "14px",
        "color": "#475569",
        "borderBottom": "1px solid #F1F5F9",
        "minHeight": "48px",
        "hover": { "background": "#F8FAFC" }
      }
    },
    "badge": {
      "success": {
        "background": "#F0FDF4",
        "color": "#065F46",
        "border": "1px solid #C1E7D5",
        "padding": "4px 8px",
        "fontSize": "12px",
        "fontWeight": 600,
        "borderRadius": "4px"
      },
      "warning": {
        "background": "#FFFBEB",
        "color": "#92400E",
        "border": "1px solid #FCD34D",
        "padding": "4px 8px",
        "fontSize": "12px",
        "fontWeight": 600,
        "borderRadius": "4px"
      },
      "error": {
        "background": "#FEE2E2",
        "color": "#991B1B",
        "border": "1px solid #FECACA",
        "padding": "4px 8px",
        "fontSize": "12px",
        "fontWeight": 600,
        "borderRadius": "4px"
      },
      "info": {
        "background": "#EFF6FF",
        "color": "#0C4A6E",
        "border": "1px solid #BFDBFE",
        "padding": "4px 8px",
        "fontSize": "12px",
        "fontWeight": 600,
        "borderRadius": "4px"
      }
    },
    "modal": {
      "standard": {
        "maxWidth": "500px",
        "padding": "28px",
        "borderRadius": "8px",
        "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
        "background": "white"
      },
      "large": {
        "maxWidth": "600px",
        "padding": "28px",
        "borderRadius": "8px",
        "boxShadow": "0 20px 25px -5px rgba(0, 0, 0, 0.1)",
        "background": "white"
      },
      "header": {
        "fontSize": "20px",
        "fontWeight": 600,
        "color": "#0F172A",
        "marginBottom": "16px"
      }
    },
    "alert": {
      "padding": "16px",
      "borderLeftWidth": "4px",
      "borderRadius": "6px",
      "fontSize": "14px",
      "iconSize": "20px",
      "gap": "12px"
    }
  },
  "layout": {
    "desktop": {
      "maxWidth": "1600px",
      "gutter": "32px",
      "sidebarWidth": "280px",
      "columnGap": "24px",
      "rowGap": "24px"
    },
    "tablet": {
      "maxWidth": "calc(100% - 64px)",
      "gutter": "24px",
      "columnGap": "16px",
      "rowGap": "16px"
    }
  },
  "accessibility": {
    "minTouchTarget": "44px",
    "focusOutlineWidth": "2px",
    "focusOutlineColor": "#2563EB",
    "focusOutlineOffset": "2px",
    "minContrastRatio": 4.5,
    "preferredContrastRatio": 7
  }
}
